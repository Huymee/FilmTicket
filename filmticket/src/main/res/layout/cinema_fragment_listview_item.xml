<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_choose_cinemas_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_cinema_name"
            style="@style/textView"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/margin_10"
            android:text="北京耀莱成龙国际影城（五棵松店）"
            android:textColor="@color/cinema_info_text_dark"
            android:textSize="@dimen/textSize_15" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_min_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_seat"
                    style="@style/imageView"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="3.0dip"
                    android:src="@mipmap/icon_cinemas_fragment_seat" />

                <TextView
                    style="@style/textView_cinema_fragment_item"
                    android:layout_gravity="center_vertical"
                    android:text="影院最低价："
                    android:textColor="@color/cinema_info_text_dark" />

                <TextView
                    android:id="@+id/tv_low_price"
                    style="@style/textView"
                    android:text="0"
                    android:textColor="@color/cinema_info_pink"
                    android:textSize="@dimen/textSize_15" />

                <TextView
                    style="@style/textView_cinema_fragment_item"
                    android:layout_gravity="center_vertical"
                    android:text="元起"
                    android:textColor="@color/cinema_info_text_dark" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_activities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:orientation="horizontal">

                <ImageView
                    style="@style/imageView"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:src="@mipmap/icon_cinemas_fragment_activities" />

                <TextView
                    android:id="@+id/tv_cinema_activities"
                    style="@style/textView_cinema_fragment_item"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3.0dip"
                    android:text="0"
                    android:textColor="@color/cinema_info_text_dark" />

                <TextView
                    style="@style/textView_cinema_fragment_item"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3.0dip"
                    android:text="个活动正在进行中"
                    android:textColor="@color/cinema_info_text_dark" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_5">

            <TextView
                android:id="@+id/tv_cinema_address"
                style="@style/textView_cinema_fragment_item"
                android:layout_marginRight="55.0dip"
                android:text="北京朝阳区朝阳北路101号朝北大悦城8层朝北大悦城8层"
                android:textColor="@color/cinema_info_text_light"
                android:textSize="@dimen/textSize_12" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="50.0dip"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:text="0.00km"
                android:textColor="@color/cinema_info_text_light"
                android:textSize="10.0sp"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>