<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price_login_vip"
                style="@style/textView"
                android:text="0.00"
                android:textColor="@color/red"
                android:textSize="@dimen/textSize_18" />

            <TextView
                android:id="@+id/tv_price_login_vip_yuan"
                style="@style/textView"
                android:text="@string/cinemainfo_yuan"
                android:textColor="@color/red"
                android:textSize="@dimen/textSize_12" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_price_login_original"
                style="@style/textView"
                android:text="0.00元"
                android:textColor="@color/cinema_info_text_dark"
                android:textSize="@dimen/textSize_12" />

            <TextView
                android:id="@+id/tv_price_login_original_h_line"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_gravity="center_vertical"
                android:background="@color/cinema_info_text_dark"
                android:text="00元" />
        </FrameLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_buy"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginLeft="@dimen/margin_20"
        android:background="@drawable/btn_cinema_info_choose_seat_selector"
        android:paddingBottom="@dimen/margin_3"
        android:paddingLeft="@dimen/margin_5"
        android:paddingRight="@dimen/margin_5"
        android:paddingTop="@dimen/margin_3"
        android:text="选座购票"
        android:textColor="@drawable/btn_cinema_info_choose_seat_text_selector" />

    <Button
        android:id="@+id/btn_buy_stop"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginLeft="@dimen/margin_20"
        android:background="@mipmap/cinema_info_stop"
        android:paddingBottom="@dimen/margin_3"
        android:paddingLeft="@dimen/margin_5"
        android:paddingRight="@dimen/margin_5"
        android:paddingTop="@dimen/margin_3"
        android:text="停止购票"
        android:textColor="@color/white"
        android:visibility="gone" />
</LinearLayout>