<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:homeAsUpIndicator">@mipmap/arrow_left</item>
        <!-- API 14 theme customizations can go here. -->
        <item name="actionBarStyle">@style/MyActionBarStyle</item>
    </style>

    <style name="title_text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textSize_16</item>
    </style>
    <style name="textView_cinema_fragment_item">
        <item name="android:textSize">@dimen/textSize_12</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="elevation">0dp</item>
    </style>
    <style name="tickets_viewpager_movieinfo">
        <item name="android:layout_marginLeft">@dimen/margin_15</item>
        <item name="android:layout_marginRight">@dimen/margin_15</item>
    </style>
    <style name="tickets_viewpager_movieinfo_arrow">
        <item name="android:layout_marginTop">@dimen/margin_5</item>
        <item name="android:layout_marginRight">@dimen/margin_15</item>
    </style>
    <style name="tickets_viewpager_bottom_text">
        <item name="android:textSize">@dimen/textSize_15</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
